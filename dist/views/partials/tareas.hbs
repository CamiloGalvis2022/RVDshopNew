

        <table class="table table-bordered table-hover table-dark">
            <h3 class="text-center">Listado de Productos</h3>
            <thead>

                <tr>
                    <th>#</th>
                    <th >Descripcion</th>
                    <th >Precio</th>
                    <th >Url</th>
                    <th >Stock</th>
                    <th >Tarea</th>
                </tr>
            </thead>
            <tbody >
                {{#each tasks}}
                    <tr>
                        <td> {{id}}</td>  
                        <td>{{descripcion}}</td>
                        <td>{{precio}}</td>
                        <td>{{url}}</td>
                        <td>{{stock}}</td>
                        <td class="btn-group" role="group" aria-label="Basic example">
                           
                                <a href="/edit/{{_id}}" class="btn btn-primary btn-sm">Actualizar</a>
                                <a href="/delete/{{_id}}"class="btn btn-danger btn-sm">Borrar</a>
                         
                        </td>
                    </tr>    
                {{/each}}

            </tbody>
            
        </table>   

   